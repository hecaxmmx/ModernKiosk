{
	"manifest_version": 2,
	"name": "Modern Kiosk",
	"description": "Kiosk-like facility extension for Firefox browsers",
	"version": "0.2",
	"permissions": ["menus", "tabs", "browserSettings"],
	"background": {
		"scripts": ["mk_bg.js"]
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/page-16.png",
			"32": "icons/page-32.png",
			"64": "icons/page-64.png"
		}
	}
}
