{
	"manifest_version": 2,
	"name": "Modern Kiosk",
	"description": "Kiosk-like facility extension for modern browsers",
	"version": "0.9",
	"permissions": ["menus", "tabs", "browserSettings", "storage"],
	"background": {
		"scripts": ["mk_bg.js"]
	},
	"icons": {
		"48": "icons/mk.svg"
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"browser_action": {
		"default_icon": {
			"32": "icons/mk.svg"
		}
  }
}
